{
    "version": "2.0.0",
    "tasks":
    [
        {
            "label": "Build: Release",
            "type": "shell",
            "icon":
            {
                "color": "terminal.ansiGreen",
                "id": "run"
            },
            "windows":
            {
                "command": "msbuild",
                "args":
                [
                    "${workspaceFolderBasename}.vcxproj",
                    "-property:configuration=Release",
                    "-nologo",
                    "-verbosity:minimal",
                    "-maxcpucount"
                ]
            },
            "linux":
            {
                "command": "make"
            },
            "options":
            {
                "cwd": "${workspaceFolder}${pathSeparator}${workspaceFolderBasename}"
            },
            "group":
            {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build: Debug",
            "type": "shell",
            "icon":
            {
                "color": "terminal.ansiYellow",
                "id": "debug"
            },
            "windows":
            {
                "command": "msbuild",
                "args":
                [
                    "${workspaceFolderBasename}.vcxproj",
                    "-property:configuration=Debug",
                    "-nologo",
                    "-verbosity:minimal",
                    "-maxcpucount"
                ]
            },
            "linux":
            {
                "command": "make"
            },
            "options":
            {
                "cwd": "${workspaceFolder}${pathSeparator}${workspaceFolderBasename}"
            },
            "group":
            {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build: Clean",
            "type": "shell",
            "icon":
            {
                "color": "terminal.ansiBlue",
                "id": "clear-all"
            },
            "windows":
            {
                "command": "Remove-Item",
                "args":
                [
                    "-LiteralPath",
                    "\"${workspaceFolderBasename}\", \"Release\", \"Debug\"",
                    "-Recurse",
                    "-Force",
                    "-ErrorAction:Ignore"
                ]
            },
            "linux":
            {
                "command": "make",
                "args":
                [
                    "clean"
                ]
            },
            "options":
            {
                "cwd": "${workspaceFolder}${pathSeparator}${workspaceFolderBasename}"
            },
            "group":
            {
                "kind": "test",
                "isDefault": false
            }
        },
    ]
}